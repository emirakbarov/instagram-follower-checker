{
  "manifest_version": 3,
  "name": "Instagram Follower Tracker",
  "version": "1.0.0",
  "description": "An Instagram extension to check who doesnâ€™t follow you back",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instagram Follower Checker"
  },
  
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}